<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solver_sudoku_solve_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
    <com.example.ProSudoku.activity.board.GameBoardView
            android:id="@+id/matrix_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:layout_marginTop="5dp">

        <Button android:id="@+id/clear_all_button"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/solver_clear_all_label"
                android:textSize="24sp"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"/>

        <Button android:id="@+id/solve_button"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/solver_solve_label"
                android:textSize="24sp"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>