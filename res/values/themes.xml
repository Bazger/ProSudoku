<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:typeface">monospace</item>
    </style>

    <!-- Day Theme -->
    <style name="AppDayTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/ButtonDay</item>
        <item name="android:typeface">monospace</item>

        <item name="android:actionBarStyle">@style/DayActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/DayActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/DayActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/DayActionBarTabs</item>

        <item name="android:alertDialogTheme">@style/DayDialog</item>
        <item name="android:popupMenuStyle">@style/DayPopupMenu</item>
    </style>


    <!-- Night Theme -->
    <style name="AppNightTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/ButtonNight</item>
        <item name="android:typeface">monospace</item>

        <item name="android:actionBarStyle">@style/NightActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/NightActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/NightActionBarTabText</item>
        <!--<item name="android:actionBarTabStyle">@style/NightActionBarTabs</item>-->
        <item name="android:alertDialogTheme">@style/NightDialog</item>
        <item name="android:popupMenuStyle">@style/NightPopupMenu</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonDay" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/day_button_text</item>
        <item name="android:background">@drawable/button_day</item>
    </style>

    <style name="ButtonNight" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/night_button_text</item>
        <item name="android:background">@drawable/button_night</item>
    </style>


    <!-- Dialog Styles -->
    <style name="DayDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Day</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Medium</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="NightDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Night</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Medium</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle.Day" parent="@style/DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearance.Day.DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle.Night" parent="@style/DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearance.Night.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Day.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Night.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
