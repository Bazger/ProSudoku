<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ProSudoku"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="17"
              android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher"
                 android:name=".Application"
                 android:allowBackup="true">
        <activity android:name=".MyActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Solver"
                  android:label="@string/solve_label"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.scores.ScoresActivity"
                  android:label="@string/scores_label"
                  android:screenOrientation="portrait"/>

        <activity android:name=".HowToPlay"
                  android:label="@string/how_to_play_title"
                  android:theme="@android:style/Theme.Holo.Light.Dialog"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.about.AboutActivity"
                  android:label="@string/about_label"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Prefs"
                  android:label="@string/settings_title"
                  android:screenOrientation="portrait"/>
    </application>
</manifest>
